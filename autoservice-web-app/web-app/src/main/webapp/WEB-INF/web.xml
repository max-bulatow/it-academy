<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Transport App</display-name>

    <servlet>
        <servlet-name>TransportServlet</servlet-name>
        <servlet-class>by.itacademy.web.TransportServletJSP</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TransportServlet</servlet-name>
        <url-pattern>/transports</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
</web-app>
